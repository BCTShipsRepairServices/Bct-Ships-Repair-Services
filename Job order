<body>
    <div class="container">
        <h1>Welcome to Our Website!</h1>
        <p>Click the button below to be redirected to our partner site. You'll be taken there in just a moment.</p>
        
        <button class="btn" onclick="redirectToSite()">
            <i class="fas fa-external-link-alt"></i>
            Visit Partner Site
        </button>
        
        <div class="loading" id="loading">
            <div class="spinner"></div>
            <p>Redirecting you now...</p>
        </div>
    </div>

    <script>
        function redirectToSite() {
            const button = document.querySelector('.btn');
            const loading = document.getElementById('loading');
            
            // Show loading animation
            button.style.opacity = '0.7';
            button.disabled = true;
            loading.style.display = 'block';
            
            // Smooth transition effect before redirect
            setTimeout(() => {
                // Replace this URL with your desired destination
                window.location.href = "https://example.com";
            }, 1500); // 1.5 second delay for the animation
        }
    </script>
